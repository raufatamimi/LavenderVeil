    <form asp-action="Index" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">
                <i class="bi bi-person-fill icon-label"></i> Name
            </label>
            <input asp-for="Name" class="form-control" placeholder="Enter your name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label">
                <i class="bi bi-geo-alt-fill icon-label"></i> Address
            </label>
            <input asp-for="Address" class="form-control" placeholder="Enter your address" />
        </div>

        <hr />
        <h5 class="text-purple mb-3"><i class="bi bi-shield-lock-fill icon-label"></i> Change Password (optional)</h5>

        <div class="mb-3">
            <label asp-for="CurrentPassword" class="form-label">
                <i class="bi bi-lock-fill icon-label"></i> Current Password
            </label>
            <input asp-for="CurrentPassword" class="form-control" type="password" placeholder="Current password" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewPassword" class="form-label">
                <i class="bi bi-shield-fill-plus icon-label"></i> New Password
            </label>
            <input asp-for="NewPassword" class="form-control" type="password" placeholder="New password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="ConfirmNewPassword" class="form-label">
                <i class="bi bi-shield-check icon-label"></i> Confirm Password
            </label>
            <input asp-for="ConfirmNewPassword" class="form-control" type="password" placeholder="Confirm password" />
            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-lavender w-100">
            <i class="bi bi-save me-1"></i> Save Changes
        </button>
    </form>
</div>

