                                        <i class="bi bi-heart"></i>
                                    </a>
                                    <a asp-controller="Products" asp-action="Details" asp-route-productId="@item.ProductId" class="btn btn-outline-secondary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
