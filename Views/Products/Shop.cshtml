                        <li class="breadcrumb-item active">Product</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="container py-4">
            <!-- Filters -->
            <form id="filter-form" class="row g-3 justify-content-center mb-4">
                <div class="col-md-3">
                    <select name="categoryId" class="form-select">
                        <option value="">-- Category --</option>
                        @foreach (var category in ViewBag.Categories as SelectList)
                        {
                            <option value="@category.Value">@category.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="sizeId" class="form-select">
                        <option value="">-- Size --</option>
                        @foreach (var size in ViewBag.Sizes as SelectList)
                        {
                            <option value="@size.Value">@size.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <input type="text" name="search" class="form-control" placeholder="Search products..."
                           value="@ViewBag.CurrentSearch" />
                </div>
            </form>

            <!-- Products Grid -->
            <div id="products-container" class="row justify-content-center">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 col-lg-3 mb-4">
                        <div class="card shadow-sm h-100 rounded-4">
                            <img src="@item.ImageUrl" class="card-img-top rounded-top" style="height: 250px; object-fit: cover;" />
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title">@item.Name</h5>
                                    @* <p class="text-muted small">@item.Description</p> *@
                                    <p class="fw-bold text-lavender">Price: @item.Price.ToString("C")</p>
                                </div>

                                <div class="btn-group d-flex gap-2 mt-3">
                                    <form asp-controller="CartItems" asp-action="AddToCart" method="post" style="flex: 1;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <button type="submit" class="btn btn-lavender w-100">
                                            <i class="bi bi-cart-plus"></i>
                                        </button>
                                    </form>
