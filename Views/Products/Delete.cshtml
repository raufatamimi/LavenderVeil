@model Lavender_Veil.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}
<style>
    body {
        background-color: #f8f3ff;
    }

    .delete-card {
        background-color: #fff0f5;
        border: 2px solid #d4b3ff;
        border-radius: 15px;
        padding: 30px;
        max-width: 700px;
        margin: auto;
        box-shadow: 0 0 15px rgba(200, 150, 255, 0.2);
    }
</style>

<div class="delete-card mt-5">
    <h2 class="text-center text-danger mb-4">Are you sure you want to delete this product?</h2>

    <dl class="row">
        <dt class="col-sm-4">Product Name</dt>
        <dd class="col-sm-8">@Model.Name</dd>

        <dt class="col-sm-4">Category</dt>
        <dd class="col-sm-8">@Model.Category?.Name</dd>

        <dt class="col-sm-4">Price</dt>
        <dd class="col-sm-8">@Model.Price</dd>
    </dl>

    <div class="text-center mt-4">
        <form asp-action="Delete" asp-route-productId="@Model.ProductId" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
