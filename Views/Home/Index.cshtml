            <div class="row g-4">
                @foreach (var item in Model.Take(8))
                {
                    <div class="col-6 col-lg-3">
                        <div class="product-card" data-aos="zoom-in">
                            <div class="product-image">
                                <img src="@item.ImageUrl" class="main-image img-fluid" alt="@item.Name">
                                <img src="@item.ImageUrl" class="hover-image img-fluid" alt="@item.Name Variant">
                                <div class="product-overlay">
                                    <div class="product-actions">
                                        <a asp-controller="Products" asp-action="Details" asp-route-productId="@item.ProductId" class="action-btn" title="Quick View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                                <form asp-controller="CartItems" asp-action="AddToCart" asp-route-productId="@item.ProductId" method="post" style="display:inline;">
                                                    <button type="submit" class="btn" title="Add to Cart">
                                                        <i class="bi bi-cart-plus"></i>
                                                    </button>
                                                </form>

                                        <a asp-controller="WishlistItems" asp-action="AddToWishlist" asp-route-productId="@item.ProductId" class="action-btn" title="Add to Wishlist">
                                            <i class="bi bi-heart"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="product-details">
                                <div class="product-category">@item.Category?.Name</div>
                                <h4 class="product-title">
                                    <a asp-controller="Products" asp-action="Details" asp-route-productId="@item.ProductId">@item.Name</a>
                                </h4>
                                <div class="product-meta">
                                    <div class="product-price">$@item.Price</div>
                                    <div class="product-rating">
                                        <i class="bi bi-star-fill"></i> 4.8 <span>(42)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

</main>

