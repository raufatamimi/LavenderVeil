    <script>
        // Set current year in copyright
        document.getElementById('copyright-year').textContent = new Date().getFullYear();

        // Favorites page functionality
        document.addEventListener('DOMContentLoaded', function() {
          // Remove individual item
          const removeButtons = document.querySelectorAll('.favorite-actions .btn-outline-danger');
          removeButtons.forEach(button => {
            button.addEventListener('click', function() {
              const productCard = this.closest('.product-card').parentElement;
              productCard.classList.add('fade-out');

              setTimeout(() => {
                productCard.remove();
                updateFavoritesCount();
                checkEmptyFavorites();
              }, 300);
            });
          });

          // Remove all items
          const removeAllButton = document.querySelector('.favorites-actions .btn-outline-danger');
          if (removeAllButton) {
            removeAllButton.addEventListener('click', function() {
              if (confirm('Are you sure you want to remove all items from your favorites?')) {
                const favoriteItems = document.querySelectorAll('.favorites .product-card');
                favoriteItems.forEach(item => {
                  item.parentElement.classList.add('fade-out');
                });

                setTimeout(() => {
                  favoriteItems.forEach(item => {
                    item.parentElement.remove();
                  });
                  updateFavoritesCount();
                  checkEmptyFavorites();
                }, 300);
              }
            });
          }

          // Add to cart functionality
          const addToCartButtons = document.querySelectorAll('.favorite-actions .btn-primary');
          addToCartButtons.forEach(button => {
            button.addEventListener('click', function() {
              // In a real implementation, this would add the item to the cart
              alert('Item added to cart!');
            });
          });

          // Add all to cart
          const addAllButton = document.querySelector('.favorites-footer .btn-primary');
          if (addAllButton) {
            addAllButton.addEventListener('click', function() {
              // In a real implementation, this would add all items to the cart
              alert('All items added to cart!');
            });
          }

          // Helper functions
          function updateFavoritesCount() {
            const count = document.querySelectorAll('.favorites .product-card').length;
            document.querySelector('.favorites-header h4').textContent = `Saved Items (${count})`;
            document.querySelector('.header-action-btn.active .badge').textContent = count;
          }

          function checkEmptyFavorites() {
            const count = document.querySelectorAll('.favorites .product-card').length;
            const emptyMessage = document.querySelector('.empty-favorites-message');
            const favoritesContent = document.querySelector('.favorites .row.g-4');
            const favoritesFooter = document.querySelector('.favorites-footer');
            const favoritesHeader = document.querySelector('.favorites-header');

            if (count === 0) {
              emptyMessage.style.display = 'block';
              favoritesContent.style.display = 'none';
              favoritesFooter.style.display = 'none';
              favoritesHeader.style.display = 'none';
            } else {
              emptyMessage.style.display = 'none';
              favoritesContent.style.display = 'flex';
              favoritesFooter.style.display = 'block';
              favoritesHeader.style.display = 'flex';
            }
          }
        });
    </script>

