                    <label asp-for="ShippingAddress" class="form-label">Shipping Address</label>
                    <textarea asp-for="ShippingAddress" class="form-control" rows="3" placeholder="Enter your full address..."></textarea>
                    <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="PaymentMethod" class="form-label">Payment Method</label>
                    <select asp-for="PaymentMethod" class="form-select">
                        <option value="Cash on Delivery">Cash on Delivery</option>
                        <option value="Credit Card">Credit Card</option>
                        <option value="PayPal">PayPal</option>
                    </select>
                </div>
                            <div class="mb-3">
